    <ViewFlipper
        android:id="@+id/slide"
        android:layout_width="match_parent"
        android:layout_height="317dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rateButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7000000"
        android:fontFamily="@font/comicz"
        android:text="@string/rateButton"
        android:textColor="#E1FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide"
        app:layout_constraintVertical_bias="0.675" />

    <Button
        android:id="@+id/libraryButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7000000"
        android:fontFamily="@font/comicz"
        android:text="@string/libraryTitle"
        android:textColor="#E1FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7000000"
        android:fontFamily="@font/comicz"
        android:text="@string/settingTitle"
        android:textColor="#E1FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide"
        app:layout_constraintVertical_bias="0.35" />

    <Button
        android:id="@+id/followButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7000000"
        android:fontFamily="@font/comicz"
        android:text="@string/followButton"
        android:textColor="#E1FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateButton"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>